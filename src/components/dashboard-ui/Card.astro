---
/**
 * Card - Generic content card component
 *
 * @description
 * A flexible container component for dashboard content with optional
 * header, configurable padding, and consistent theme styling.
 *
 * Features:
 * - Optional header with title and description
 * - Configurable padding levels
 * - Optional border removal
 * - Slot for custom content
 * - Slot for footer content
 *
 * @example
 * ```astro
 * <Card title="User Profile" description="Manage your account settings" padding="lg">
 *   <p>Card content goes here</p>
 *   <div slot="footer">
 *     <button>Save</button>
 *   </div>
 * </Card>
 * ```
 */

interface Props {
  title?: string;
  description?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
  noBorder?: boolean;
}

const { title, description, padding = 'md', noBorder = false } = Astro.props;

const paddingClasses = {
  none: 'card-padding-none',
  sm: 'card-padding-sm',
  md: 'card-padding-md',
  lg: 'card-padding-lg',
};
---

<div class:list={['card', { 'card-no-border': noBorder }]}>
  {
    (title || description) && (
      <div class="card-header">
        {title && <h3 class="card-title">{title}</h3>}
        {description && <p class="card-description">{description}</p>}
      </div>
    )
  }

  <div class:list={['card-content', paddingClasses[padding]]}>
    <slot />
  </div>

  {
    Astro.slots.has('footer') && (
      <div class="card-footer">
        <slot name="footer" />
      </div>
    )
  }
</div>

<style>
  .card {
    background: var(--color-surface, #fff);
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: var(--radius-lg, 0.75rem);
    overflow: hidden;
  }

  .card-no-border {
    border: none;
  }

  .card-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-border, #e5e7eb);
  }

  .card-no-border .card-header {
    border-bottom: none;
    padding-bottom: 0;
  }

  .card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text, #000);
    margin: 0 0 0.25rem 0;
  }

  .card-description {
    font-size: 0.875rem;
    color: var(--color-text-muted, #6b7280);
    margin: 0;
  }

  .card-content {
    /* Padding applied via modifier classes */
  }

  .card-padding-none {
    padding: 0;
  }

  .card-padding-sm {
    padding: 1rem;
  }

  .card-padding-md {
    padding: 1.5rem;
  }

  .card-padding-lg {
    padding: 2rem;
  }

  .card-footer {
    padding: 1rem 1.5rem;
    border-top: 1px solid var(--color-border, #e5e7eb);
    background: var(--color-background, #f9fafb);
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.75rem;
  }

  .card-no-border .card-footer {
    border-top: none;
    background: transparent;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .card-header {
      padding: 1.25rem;
    }

    .card-padding-sm {
      padding: 0.75rem;
    }

    .card-padding-md {
      padding: 1.25rem;
    }

    .card-padding-lg {
      padding: 1.5rem;
    }

    .card-footer {
      padding: 0.75rem 1.25rem;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .card {
      background: var(--color-surface, #1f2937);
      border-color: var(--color-border, #374151);
    }

    .card-header {
      border-bottom-color: var(--color-border, #374151);
    }

    .card-footer {
      border-top-color: var(--color-border, #374151);
      background: var(--color-background, #111827);
    }
  }

  /* Focus visible styles for accessibility */
  .card:focus-within {
    outline: 2px solid var(--color-primary, #6366f1);
    outline-offset: 2px;
  }
</style>
