---
/**
 * EmptyState - Empty state placeholder component
 *
 * @description
 * A component for displaying empty states with an icon, title, description,
 * and optional call-to-action button. Used for empty tables, no search
 * results, or new user onboarding.
 *
 * Features:
 * - Large icon display
 * - Title and description
 * - Optional CTA button
 * - Centered layout
 *
 * @example
 * ```astro
 * <EmptyState
 *   icon="inbox"
 *   title="No projects yet"
 *   description="Get started by creating your first project"
 *   actionLabel="Create Project"
 *   actionHref="/dashboard/projects/new"
 * />
 * ```
 */

import { Icon } from 'astro-icon/components';

interface Props {
  icon?: string; // Icon name from lucide
  title: string;
  description?: string;
  actionLabel?: string;
  actionHref?: string;
}

const { icon = 'inbox', title, description, actionLabel, actionHref } = Astro.props;
---

<div class="empty-state">
  <div class="empty-state-icon">
    <Icon name={`lucide:${icon}`} />
  </div>

  <h3 class="empty-state-title">{title}</h3>

  {description && <p class="empty-state-description">{description}</p>}

  {
    actionLabel && actionHref && (
      <a href={actionHref} class="empty-state-action">
        {actionLabel}
      </a>
    )
  }
</div>

<style>
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 1.5rem;
    text-align: center;
  }

  .empty-state-icon {
    width: 4rem;
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    color: var(--color-text-muted, #6b7280);
    opacity: 0.5;
  }

  .empty-state-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .empty-state-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text, #000);
    margin: 0 0 0.5rem 0;
  }

  .empty-state-description {
    font-size: 0.875rem;
    color: var(--color-text-muted, #6b7280);
    margin: 0 0 1.5rem 0;
    max-width: 28rem;
  }

  .empty-state-action {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem 1.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    background: var(--color-primary, #6366f1);
    border: none;
    border-radius: var(--radius-md, 0.5rem);
    text-decoration: none;
    cursor: pointer;
    transition:
      background-color 150ms ease,
      transform 150ms ease;
  }

  .empty-state-action:hover {
    background: color-mix(in srgb, var(--color-primary, #6366f1) 90%, black);
    transform: translateY(-1px);
  }

  .empty-state-action:active {
    transform: translateY(0);
  }

  .empty-state-action:focus-visible {
    outline: 2px solid var(--color-primary, #6366f1);
    outline-offset: 2px;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .empty-state {
      padding: 2rem 1rem;
    }

    .empty-state-icon {
      width: 3rem;
      height: 3rem;
      margin-bottom: 1rem;
    }

    .empty-state-title {
      font-size: 1.125rem;
    }

    .empty-state-description {
      font-size: 0.8125rem;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .empty-state-icon {
      color: var(--color-text-muted, #9ca3af);
    }
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .empty-state-action {
      transition: none;
    }

    .empty-state-action:hover {
      transform: none;
    }

    .empty-state-action:active {
      transform: none;
    }
  }
</style>
