---
/**
 * LoadingSkeleton - Loading state component
 *
 * @description
 * A skeleton loading component with animated shimmer effect for
 * displaying loading states. Supports multiple variants for different
 * content types.
 *
 * Features:
 * - Multiple variants: card, table, text, stat
 * - Animated shimmer effect
 * - Maintains layout during loading
 * - Accessible with aria-busy
 *
 * @example
 * ```astro
 * <LoadingSkeleton variant="card" count={3} />
 * <LoadingSkeleton variant="table" />
 * <LoadingSkeleton variant="stat" count={4} />
 * ```
 */

interface Props {
  variant: 'card' | 'table' | 'text' | 'stat';
  count?: number; // Number of skeleton items
}

const { variant, count = 1 } = Astro.props;
---

<div class="loading-skeleton-container" aria-busy="true" aria-label="Loading content">
  {
    variant === 'card' && (
      <div class="skeleton-cards">
        {Array.from({ length: count }).map(() => (
          <div class="skeleton-card">
            <div class="skeleton-card-header">
              <div class="skeleton-line skeleton-line-title" />
              <div class="skeleton-circle" />
            </div>
            <div class="skeleton-card-body">
              <div class="skeleton-line skeleton-line-lg" />
              <div class="skeleton-line skeleton-line-md" />
              <div class="skeleton-line skeleton-line-sm" />
            </div>
          </div>
        ))}
      </div>
    )
  }

  {
    variant === 'table' && (
      <div class="skeleton-table">
        <div class="skeleton-table-header">
          {Array.from({ length: 4 }).map(() => (
            <div class="skeleton-line skeleton-line-sm" />
          ))}
        </div>
        {Array.from({ length: count }).map(() => (
          <div class="skeleton-table-row">
            {Array.from({ length: 4 }).map(() => (
              <div class="skeleton-line skeleton-line-md" />
            ))}
          </div>
        ))}
      </div>
    )
  }

  {
    variant === 'text' && (
      <div class="skeleton-text">
        {Array.from({ length: count }).map(() => (
          <div class="skeleton-line skeleton-line-text" />
        ))}
      </div>
    )
  }

  {
    variant === 'stat' && (
      <div class="skeleton-stats">
        {Array.from({ length: count }).map(() => (
          <div class="skeleton-stat">
            <div class="skeleton-stat-header">
              <div class="skeleton-line skeleton-line-sm" />
              <div class="skeleton-circle skeleton-circle-sm" />
            </div>
            <div class="skeleton-line skeleton-line-xl" />
            <div class="skeleton-line skeleton-line-xs" />
          </div>
        ))}
      </div>
    )
  }
</div>

<style>
  .loading-skeleton-container {
    width: 100%;
  }

  /* Base skeleton styles */
  .skeleton-line,
  .skeleton-circle {
    background: linear-gradient(
      90deg,
      var(--color-background, #f3f4f6) 0%,
      var(--color-surface, #fff) 50%,
      var(--color-background, #f3f4f6) 100%
    );
    background-size: 200% 100%;
    animation: shimmer 1.5s ease-in-out infinite;
    border-radius: var(--radius-sm, 0.375rem);
  }

  @keyframes shimmer {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

  /* Line variants */
  .skeleton-line {
    height: 1rem;
    width: 100%;
  }

  .skeleton-line-xs {
    height: 0.75rem;
    width: 60%;
  }

  .skeleton-line-sm {
    height: 0.875rem;
    width: 40%;
  }

  .skeleton-line-md {
    height: 1rem;
    width: 70%;
  }

  .skeleton-line-lg {
    height: 1.25rem;
    width: 90%;
  }

  .skeleton-line-xl {
    height: 2rem;
    width: 50%;
  }

  .skeleton-line-title {
    height: 1rem;
    width: 60%;
  }

  .skeleton-line-text {
    height: 1rem;
    width: 100%;
    margin-bottom: 0.5rem;
  }

  .skeleton-line-text:last-child {
    width: 70%;
    margin-bottom: 0;
  }

  /* Circle variants */
  .skeleton-circle {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .skeleton-circle-sm {
    width: 2rem;
    height: 2rem;
  }

  /* Card variant */
  .skeleton-cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .skeleton-card {
    background: var(--color-surface, #fff);
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: var(--radius-lg, 0.75rem);
    padding: 1.5rem;
  }

  .skeleton-card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .skeleton-card-body {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  /* Table variant */
  .skeleton-table {
    background: var(--color-surface, #fff);
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: var(--radius-md, 0.5rem);
    padding: 1rem;
  }

  .skeleton-table-header {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border, #e5e7eb);
    margin-bottom: 1rem;
  }

  .skeleton-table-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border, #e5e7eb);
  }

  .skeleton-table-row:last-child {
    border-bottom: none;
  }

  /* Text variant */
  .skeleton-text {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  /* Stat variant */
  .skeleton-stats {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .skeleton-stat {
    background: var(--color-surface, #fff);
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: var(--radius-lg, 0.75rem);
    padding: 1.5rem;
  }

  .skeleton-stat-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 1rem;
  }

  .skeleton-stat > .skeleton-line {
    margin-bottom: 0.5rem;
  }

  .skeleton-stat > .skeleton-line:last-child {
    margin-bottom: 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .skeleton-cards,
    .skeleton-stats {
      grid-template-columns: 1fr;
    }

    .skeleton-table-header,
    .skeleton-table-row {
      grid-template-columns: 1fr;
      gap: 0.5rem;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .skeleton-line,
    .skeleton-circle {
      background: linear-gradient(
        90deg,
        var(--color-background, #111827) 0%,
        var(--color-surface, #1f2937) 50%,
        var(--color-background, #111827) 100%
      );
      background-size: 200% 100%;
    }

    .skeleton-card,
    .skeleton-table,
    .skeleton-stat {
      background: var(--color-surface, #1f2937);
      border-color: var(--color-border, #374151);
    }

    .skeleton-table-header,
    .skeleton-table-row {
      border-bottom-color: var(--color-border, #374151);
    }
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .skeleton-line,
    .skeleton-circle {
      animation: none;
      background: var(--color-background, #f3f4f6);
    }

    @media (prefers-color-scheme: dark) {
      .skeleton-line,
      .skeleton-circle {
        background: var(--color-background, #111827);
      }
    }
  }
</style>
