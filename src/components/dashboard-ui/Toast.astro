---
/**
 * Toast - Notification toast component
 *
 * @description
 * A toast notification system for displaying temporary messages to users.
 * Supports multiple variants, auto-dismiss, manual dismiss, and stacking
 * multiple toasts.
 *
 * Features:
 * - Multiple variants: success, error, warning, info
 * - Auto-dismiss with configurable timeout
 * - Manual dismiss button
 * - Position at top-right with slide-in animation
 * - Support stacking multiple toasts
 * - Accessible with proper ARIA attributes
 *
 * @example Including the toast container
 * ```astro
 * <Toast />
 * ```
 *
 * @example Showing a toast via JavaScript
 * ```javascript
 * window.showToast({
 *   message: 'Changes saved successfully',
 *   variant: 'success',
 *   duration: 5000
 * });
 * ```
 */
---

<!-- Toast Container -->
<div
  id="toast-container"
  class="toast-container"
  role="region"
  aria-label="Notifications"
  aria-live="polite"
>
  <!-- Toasts will be dynamically inserted here -->
</div>

<style>
  /* Toast Container */
  .toast-container {
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 10000;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    max-width: 400px;
    pointer-events: none;
  }

  /* Toast Item */
  :global(.toast) {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    box-shadow:
      0 10px 15px -3px rgb(0 0 0 / 0.1),
      0 4px 6px -4px rgb(0 0 0 / 0.1);
    pointer-events: auto;
    opacity: 0;
    transform: translateX(calc(100% + 1rem));
    transition:
      opacity 200ms ease,
      transform 200ms ease;
  }

  :global(.toast.toast-visible) {
    opacity: 1;
    transform: translateX(0);
  }

  :global(.toast.toast-removing) {
    opacity: 0;
    transform: translateX(calc(100% + 1rem));
  }

  /* Toast Icon */
  :global(.toast-icon) {
    flex-shrink: 0;
    width: 1.25rem;
    height: 1.25rem;
    margin-top: 0.125rem;
  }

  /* Toast Content */
  :global(.toast-content) {
    flex: 1;
    min-width: 0;
  }

  :global(.toast-message) {
    font-size: 0.875rem;
    color: var(--color-text);
    line-height: 1.5;
    word-wrap: break-word;
  }

  /* Toast Close Button */
  :global(.toast-close) {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
    cursor: pointer;
    transition: all 150ms ease;
  }

  :global(.toast-close:hover) {
    background: var(--color-background);
    color: var(--color-text);
  }

  :global(.toast-close:focus) {
    outline: none;
  }

  :global(.toast-close:focus-visible) {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  /* Variant Styles */
  :global(.toast-success) {
    border-left: 4px solid var(--color-success);
  }

  :global(.toast-success .toast-icon) {
    color: var(--color-success);
  }

  :global(.toast-error) {
    border-left: 4px solid var(--color-error);
  }

  :global(.toast-error .toast-icon) {
    color: var(--color-error);
  }

  :global(.toast-warning) {
    border-left: 4px solid var(--color-warning);
  }

  :global(.toast-warning .toast-icon) {
    color: var(--color-warning);
  }

  :global(.toast-info) {
    border-left: 4px solid var(--color-info);
  }

  :global(.toast-info .toast-icon) {
    color: var(--color-info);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .toast-container {
      top: 0.5rem;
      right: 0.5rem;
      left: 0.5rem;
      max-width: none;
    }

    :global(.toast) {
      padding: 0.875rem;
    }
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    :global(.toast),
    :global(.toast.toast-visible),
    :global(.toast.toast-removing) {
      transition: none;
    }
  }
</style>

<script>
  /**
   * Toast Client-Side Functionality
   *
   * Manages:
   * - Creating and displaying toast notifications
   * - Auto-dismiss with configurable timeout
   * - Manual dismiss
   * - Stacking multiple toasts
   * - Accessible announcements
   */

  interface ToastOptions {
    /** Toast message text */
    message: string;
    /** Toast variant/type */
    variant?: 'success' | 'error' | 'warning' | 'info';
    /** Auto-dismiss duration in milliseconds (0 = no auto-dismiss) */
    duration?: number;
  }

  interface Toast {
    id: string;
    element: HTMLElement;
    timeout?: number;
  }

  const toasts: Toast[] = [];
  let toastIdCounter = 0;

  /**
   * Create toast element
   */
  function createToastElement(id: string, message: string, variant: string): HTMLElement {
    const toast = document.createElement('div');
    toast.className = `toast toast-${variant}`;
    toast.setAttribute('role', 'status');
    toast.setAttribute('aria-live', 'polite');
    toast.setAttribute('data-toast-id', id);

    // Create icon element
    const iconWrapper = document.createElement('div');
    iconWrapper.className = 'toast-icon';

    // Create SVG icon manually based on variant
    const iconSvg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
    iconSvg.setAttribute('width', '20');
    iconSvg.setAttribute('height', '20');
    iconSvg.setAttribute('viewBox', '0 0 24 24');
    iconSvg.setAttribute('fill', 'none');
    iconSvg.setAttribute('stroke', 'currentColor');
    iconSvg.setAttribute('stroke-width', '2');
    iconSvg.setAttribute('stroke-linecap', 'round');
    iconSvg.setAttribute('stroke-linejoin', 'round');

    // Add icon paths based on variant
    if (variant === 'success') {
      const path1 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
      path1.setAttribute('d', 'M22 11.08V12a10 10 0 1 1-5.93-9.14');
      iconSvg.appendChild(path1);
      const path2 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
      path2.setAttribute('d', 'm9 11 3 3L22 4');
      iconSvg.appendChild(path2);
    } else if (variant === 'error') {
      const circle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
      circle.setAttribute('cx', '12');
      circle.setAttribute('cy', '12');
      circle.setAttribute('r', '10');
      iconSvg.appendChild(circle);
      const path1 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
      path1.setAttribute('d', 'm15 9-6 6');
      iconSvg.appendChild(path1);
      const path2 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
      path2.setAttribute('d', 'm9 9 6 6');
      iconSvg.appendChild(path2);
    } else if (variant === 'warning') {
      const path1 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
      path1.setAttribute(
        'd',
        'm21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3'
      );
      iconSvg.appendChild(path1);
      const path2 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
      path2.setAttribute('d', 'M12 9v4');
      iconSvg.appendChild(path2);
      const path3 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
      path3.setAttribute('d', 'M12 17h.01');
      iconSvg.appendChild(path3);
    } else {
      // info
      const circle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
      circle.setAttribute('cx', '12');
      circle.setAttribute('cy', '12');
      circle.setAttribute('r', '10');
      iconSvg.appendChild(circle);
      const path1 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
      path1.setAttribute('d', 'M12 16v-4');
      iconSvg.appendChild(path1);
      const path2 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
      path2.setAttribute('d', 'M12 8h.01');
      iconSvg.appendChild(path2);
    }

    iconWrapper.appendChild(iconSvg);

    // Create content
    const content = document.createElement('div');
    content.className = 'toast-content';

    const messageEl = document.createElement('p');
    messageEl.className = 'toast-message';
    messageEl.textContent = message;

    content.appendChild(messageEl);

    // Create close button
    const closeButton = document.createElement('button');
    closeButton.type = 'button';
    closeButton.className = 'toast-close';
    closeButton.setAttribute('aria-label', 'Close notification');

    const closeSvg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
    closeSvg.setAttribute('width', '16');
    closeSvg.setAttribute('height', '16');
    closeSvg.setAttribute('viewBox', '0 0 24 24');
    closeSvg.setAttribute('fill', 'none');
    closeSvg.setAttribute('stroke', 'currentColor');
    closeSvg.setAttribute('stroke-width', '2');
    closeSvg.setAttribute('stroke-linecap', 'round');
    closeSvg.setAttribute('stroke-linejoin', 'round');

    const closePath1 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
    closePath1.setAttribute('d', 'M18 6 6 18');
    closeSvg.appendChild(closePath1);
    const closePath2 = document.createElementNS('http://www.w3.org/2000/svg', 'path');
    closePath2.setAttribute('d', 'm6 6 12 12');
    closeSvg.appendChild(closePath2);

    closeButton.appendChild(closeSvg);

    closeButton.addEventListener('click', () => {
      dismissToast(id);
    });

    // Assemble toast
    toast.appendChild(iconWrapper);
    toast.appendChild(content);
    toast.appendChild(closeButton);

    return toast;
  }

  /**
   * Show a toast notification
   */
  function showToast(options: ToastOptions): string {
    const { message, variant = 'info', duration = 5000 } = options;

    // Generate unique ID
    const id = `toast-${++toastIdCounter}`;

    // Create toast element
    const toastElement = createToastElement(id, message, variant);

    // Get container
    const container = document.getElementById('toast-container');
    if (!container) {
      console.error('Toast container not found');
      return id;
    }

    // Add to container
    container.appendChild(toastElement);

    // Trigger animation
    requestAnimationFrame(() => {
      toastElement.classList.add('toast-visible');
    });

    // Setup auto-dismiss
    let timeout: number | undefined;
    if (duration > 0) {
      timeout = window.setTimeout(() => {
        dismissToast(id);
      }, duration);
    }

    // Store toast reference
    toasts.push({
      id,
      element: toastElement,
      timeout,
    });

    return id;
  }

  /**
   * Dismiss a toast by ID
   */
  function dismissToast(id: string) {
    const toastIndex = toasts.findIndex((t) => t.id === id);
    if (toastIndex === -1) return;

    const toast = toasts[toastIndex];

    // Clear timeout if exists
    if (toast.timeout) {
      clearTimeout(toast.timeout);
    }

    // Trigger remove animation
    toast.element.classList.add('toast-removing');

    // Remove from DOM after animation
    setTimeout(() => {
      toast.element.remove();
      toasts.splice(toastIndex, 1);
    }, 200);
  }

  /**
   * Dismiss all toasts
   */
  function dismissAllToasts() {
    toasts.forEach((toast) => {
      dismissToast(toast.id);
    });
  }

  // Expose global functions
  declare global {
    interface Window {
      showToast: (options: ToastOptions) => string;
      dismissToast: (id: string) => void;
      dismissAllToasts: () => void;
    }
  }

  window.showToast = showToast;
  window.dismissToast = dismissToast;
  window.dismissAllToasts = dismissAllToasts;

  // Initialize on page load (no initialization needed, just expose functions)

  // Clean up toasts on page navigation
  document.addEventListener('astro:before-preparation', () => {
    dismissAllToasts();
  });
</script>
