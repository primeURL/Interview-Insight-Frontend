---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import PageHeader from '@sections/content/PageHeader.astro';
import StatsSection from '@sections/social-proof/StatsSection.astro';
import VideoEmbed from '@sections/content/VideoEmbed.astro';
import ValuesSection from '@sections/team/ValuesSection.astro';
import TeamSection from '@sections/team/TeamSection.astro';
import ContentSection from '@sections/content/ContentSection.astro';
import CTA from '@sections/marketing/CTA.astro';
import { siteConfig } from '@/config';

const team = [
  {
    name: 'Sarah Mitchell',
    role: 'CEO & Co-founder',
    bio: 'Former infrastructure lead at a major cloud provider. Sarah started Virex to make deployment accessible to every developer.',
    avatar: '/images/team/sarah-mitchell.webp',
  },
  {
    name: 'James Chen',
    role: 'CTO & Co-founder',
    bio: 'Built distributed systems at scale for 15 years. James leads our engineering team and architecture decisions.',
    avatar: '/images/team/james-chen.webp',
  },
  {
    name: 'Maria Rodriguez',
    role: 'VP of Product',
    bio: 'Product leader with a passion for developer tools. Maria ensures every feature we ship solves real problems.',
    avatar: '/images/team/maria-rodriguez.webp',
  },
  {
    name: 'David Kim',
    role: 'VP of Engineering',
    bio: 'Scaling expert who loves building reliable systems. David leads our platform and infrastructure teams.',
    avatar: '/images/team/david-kim.webp',
  },
];

const values = [
  {
    title: 'Developer First',
    description:
      'We build for developers because we are developers. Every decision starts with how it impacts the people using our platform.',
  },
  {
    title: 'Simplicity Wins',
    description:
      'Complex problems deserve simple solutions. We work hard to hide complexity so you can focus on building.',
  },
  {
    title: 'Reliability Matters',
    description:
      'Your users depend on your app, and you depend on us. We take that responsibility seriously.',
  },
  {
    title: 'Transparency Always',
    description:
      'No hidden fees, no surprise limits, no confusing pricing. What you see is what you get.',
  },
];

const stats = [
  { value: '50K+', label: 'Developers' },
  { value: '10M+', label: 'Deployments' },
  { value: '99.99%', label: 'Uptime' },
  { value: '200+', label: 'Edge Locations' },
];
---

<MarketingLayout
  title={`About - ${siteConfig.name}`}
  description="Learn about the team and mission behind Virex, the modern deployment platform for developers."
>
  <PageHeader title="We're building the future of deployment" align="left" maxWidth="lg">
    <p class="mt-6 text-lg text-text-muted leading-relaxed">
      Virex started with a simple observation: deploying applications shouldn't be hard. Yet
      developers everywhere were spending hours configuring CI/CD pipelines, managing
      infrastructure, and debugging deployment issues.
    </p>
    <p class="mt-4 text-lg text-text-muted leading-relaxed">
      We founded Virex in 2021 to change that. Our mission is to make deployment so simple that it
      disappearsâ€”letting developers focus entirely on building great products.
    </p>
  </PageHeader>

  <StatsSection stats={stats} background="muted" />

  <VideoEmbed
    title="See Virex in action"
    subtitle="Watch how easy it is to deploy your first application in under 2 minutes."
    videoId="dQw4w9WgXcQ"
    provider="youtube"
    maxWidth="lg"
    background="default"
  />

  <ValuesSection
    title="Our values"
    items={values}
    variant="card"
    columns={2}
    background="default"
  />

  <TeamSection title="Meet the team" members={team} columns={4} background="muted" />

  <ContentSection
    title="Backed by the best"
    content={[
      "We're proud to be backed by leading investors who share our vision for the future of developer tools. Our investors include top-tier venture capital firms and angels who have built and scaled developer-focused companies.",
      "With their support, we're building a platform that will serve millions of developers worldwide.",
    ]}
    background="default"
  />

  <CTA
    title="Join us on our mission"
    description="We're always looking for talented people who want to make deployment better for everyone."
    action={{ label: 'View Open Positions', href: '/careers' }}
    background="muted"
  />
</MarketingLayout>
