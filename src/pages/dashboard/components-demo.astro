---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import Card from '@dashboard-ui/Card.astro';
import Chart from '@dashboard-ui/Chart.astro';
import StatCard from '@dashboard-ui/StatCard.astro';

const breadcrumbs = [{ label: 'Dashboard', href: '/dashboard' }, { label: 'Components Demo' }];

// Sample chart data
const lineChartData = {
  labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
  datasets: [
    {
      label: 'Sales',
      data: [12, 19, 3, 5, 2, 3, 9],
    },
  ],
};

const multiLineChartData = {
  labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
  datasets: [
    {
      label: 'Revenue',
      data: [30, 45, 35, 50, 49, 60],
      color: 'oklch(0.55 0.2 265)',
    },
    {
      label: 'Expenses',
      data: [20, 25, 30, 28, 32, 35],
      color: 'oklch(0.6 0.25 25)',
    },
  ],
};

const barChartData = {
  labels: ['Product A', 'Product B', 'Product C', 'Product D', 'Product E'],
  datasets: [
    {
      label: 'Units Sold',
      data: [65, 59, 80, 81, 56],
    },
  ],
};

const areaChartData = {
  labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
  datasets: [
    {
      label: 'Active Users',
      data: [1200, 1900, 1500, 2100],
    },
  ],
};
---

<DashboardLayout
  title="Components Demo"
  description="Dashboard UI components showcase"
  breadcrumbs={breadcrumbs}
>
  <div class="space-y-8">
    <!-- Stats Overview -->
    <div>
      <h2 class="text-2xl font-semibold mb-4">Statistics Cards</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <StatCard
          title="Total Revenue"
          value="$45,231"
          trend={{ value: 12, direction: 'up' }}
          icon="dollar-sign"
          description="vs last month"
        />
        <StatCard
          title="Active Users"
          value="2,345"
          trend={{ value: 8, direction: 'up' }}
          icon="users"
          description="vs last month"
        />
        <StatCard
          title="Conversion Rate"
          value="3.24%"
          trend={{ value: 3, direction: 'down' }}
          icon="trending-up"
          description="vs last month"
        />
        <StatCard
          title="Avg. Order Value"
          value="$124"
          icon="shopping-cart"
          description="all time"
        />
      </div>
    </div>

    <!-- Charts Section -->
    <div>
      <h2 class="text-2xl font-semibold mb-4">Chart Components</h2>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Line Chart -->
        <Card title="Weekly Sales" description="Sales performance over the last week">
          <Chart type="line" data={lineChartData} height={300} />
        </Card>

        <!-- Bar Chart -->
        <Card title="Product Performance" description="Units sold by product">
          <Chart type="bar" data={barChartData} height={300} />
        </Card>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Area Chart -->
        <Card title="User Growth" description="Active users over the last 4 weeks">
          <Chart type="area" data={areaChartData} height={300} />
        </Card>

        <!-- Multi-line Chart -->
        <Card title="Financial Overview" description="Revenue vs Expenses">
          <Chart type="line" data={multiLineChartData} height={300} />
        </Card>
      </div>
    </div>

    <!-- Large Chart Example -->
    <div>
      <h2 class="text-2xl font-semibold mb-4">Full Width Chart</h2>
      <Card title="Annual Performance" description="Monthly breakdown of key metrics">
        <Chart
          type="area"
          data={{
            labels: [
              'Jan',
              'Feb',
              'Mar',
              'Apr',
              'May',
              'Jun',
              'Jul',
              'Aug',
              'Sep',
              'Oct',
              'Nov',
              'Dec',
            ],
            datasets: [
              {
                label: 'Revenue',
                data: [30, 45, 35, 50, 49, 60, 70, 91, 85, 95, 100, 110],
                color: 'oklch(0.55 0.2 265)',
              },
            ],
          }}
          height={400}
        />
      </Card>
    </div>
  </div>
</DashboardLayout>

<style>
  .space-y-8 > * + * {
    margin-top: 2rem;
  }
</style>
