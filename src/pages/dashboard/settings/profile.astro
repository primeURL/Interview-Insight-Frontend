---
/**
 * Profile Settings Page
 *
 * @description
 * User profile management page with personal information form,
 * avatar upload placeholder, and password change section.
 */

import DashboardLayout from '@/layouts/DashboardLayout.astro';
import Card from '@dashboard-ui/Card.astro';
import { Icon } from 'astro-icon/components';

const breadcrumbs = [
  { label: 'Dashboard', href: '/dashboard' },
  { label: 'Settings', href: '/dashboard/settings' },
  { label: 'Profile' },
];

// Sample user data for demonstration
const user = {
  name: 'Alex Johnson',
  email: 'alex@virex.com',
  bio: 'Product designer and developer passionate about creating intuitive user experiences.',
  avatar: undefined, // No avatar, will show initials
};
---

<DashboardLayout
  title="Profile Settings"
  description="Manage your personal information and account settings"
  breadcrumbs={breadcrumbs}
>
  <div class="settings-container">
    <div class="settings-header">
      <h1 class="settings-title">Profile Settings</h1>
      <p class="settings-description">
        Update your personal information and manage your account preferences.
      </p>
    </div>

    <div class="settings-content">
      <!-- Profile Information Card -->
      <Card
        title="Profile Information"
        description="Update your personal details and profile picture"
        padding="lg"
      >
        <form class="settings-form" id="profile-form">
          <!-- Avatar Upload Section -->
          <div class="form-group avatar-section">
            <label class="form-label">Profile Picture</label>
            <div class="avatar-upload">
              <div class="avatar-preview">
                {
                  user.avatar ? (
                    <img src={user.avatar} alt={user.name} class="avatar-image" />
                  ) : (
                    <div class="avatar-initials">
                      {user.name
                        .split(' ')
                        .map((n) => n[0])
                        .join('')}
                    </div>
                  )
                }
              </div>
              <div class="avatar-actions">
                <button type="button" class="btn btn-secondary">
                  <Icon name="lucide:upload" class="btn-icon" />
                  Upload Photo
                </button>
                <button type="button" class="btn btn-ghost">
                  <Icon name="lucide:trash-2" class="btn-icon" />
                  Remove
                </button>
                <p class="avatar-hint">JPG, PNG or GIF. Max size 2MB.</p>
              </div>
            </div>
          </div>

          <!-- Name Field -->
          <div class="form-group">
            <label for="name" class="form-label">
              Full Name
              <span class="form-required">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-input"
              value={user.name}
              required
              aria-required="true"
            />
          </div>

          <!-- Email Field -->
          <div class="form-group">
            <label for="email" class="form-label">
              Email Address
              <span class="form-required">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-input"
              value={user.email}
              disabled
              aria-disabled="true"
            />
            <p class="form-hint">
              Your email address cannot be changed. Contact support if you need assistance.
            </p>
          </div>

          <!-- Bio Field -->
          <div class="form-group">
            <label for="bio" class="form-label"> Bio </label>
            <textarea
              id="bio"
              name="bio"
              class="form-textarea"
              rows="4"
              placeholder="Tell us a bit about yourself...">{user.bio}</textarea
            >
            <p class="form-hint">Brief description for your profile. Max 200 characters.</p>
          </div>
        </form>

        <div slot="footer">
          <button type="button" class="btn btn-ghost"> Cancel </button>
          <button type="submit" form="profile-form" class="btn btn-primary">
            <Icon name="lucide:save" class="btn-icon" />
            Save Changes
          </button>
        </div>
      </Card>

      <!-- Password Change Card -->
      <Card
        title="Change Password"
        description="Update your password to keep your account secure"
        padding="lg"
      >
        <form class="settings-form" id="password-form">
          <!-- Current Password -->
          <div class="form-group">
            <label for="current-password" class="form-label">
              Current Password
              <span class="form-required">*</span>
            </label>
            <input
              type="password"
              id="current-password"
              name="current-password"
              class="form-input"
              required
              aria-required="true"
              autocomplete="current-password"
            />
          </div>

          <!-- New Password -->
          <div class="form-group">
            <label for="new-password" class="form-label">
              New Password
              <span class="form-required">*</span>
            </label>
            <input
              type="password"
              id="new-password"
              name="new-password"
              class="form-input"
              required
              aria-required="true"
              autocomplete="new-password"
              minlength="8"
            />
            <p class="form-hint">Must be at least 8 characters long.</p>
          </div>

          <!-- Confirm Password -->
          <div class="form-group">
            <label for="confirm-password" class="form-label">
              Confirm New Password
              <span class="form-required">*</span>
            </label>
            <input
              type="password"
              id="confirm-password"
              name="confirm-password"
              class="form-input"
              required
              aria-required="true"
              autocomplete="new-password"
              minlength="8"
            />
          </div>
        </form>

        <div slot="footer">
          <button type="button" class="btn btn-ghost"> Cancel </button>
          <button type="submit" form="password-form" class="btn btn-primary">
            <Icon name="lucide:lock" class="btn-icon" />
            Update Password
          </button>
        </div>
      </Card>
    </div>
  </div>
</DashboardLayout>

<style>
  .settings-container {
    max-width: 48rem;
    margin: 0 auto;
  }

  .settings-header {
    margin-bottom: 2rem;
  }

  .settings-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--color-text, #000);
    margin: 0 0 0.5rem 0;
  }

  .settings-description {
    font-size: 1rem;
    color: var(--color-text-muted, #6b7280);
    margin: 0;
  }

  .settings-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .settings-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text, #000);
  }

  .form-required {
    color: var(--color-error, #ef4444);
  }

  .form-input,
  .form-textarea {
    width: 100%;
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
    font-family: inherit;
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: var(--radius-md, 0.5rem);
    background: var(--color-surface, #fff);
    color: var(--color-text, #000);
    transition:
      border-color 150ms ease,
      box-shadow 150ms ease;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-primary, #6366f1);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-primary, #6366f1) 10%, transparent);
  }

  .form-input:disabled {
    background: var(--color-background, #f9fafb);
    color: var(--color-text-muted, #6b7280);
    cursor: not-allowed;
  }

  .form-input.error,
  .form-textarea.error {
    border-color: var(--color-error, #ef4444);
  }

  .form-input.error:focus,
  .form-textarea.error:focus {
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--color-error, #ef4444) 10%, transparent);
  }

  .form-textarea {
    resize: vertical;
    min-height: 6rem;
  }

  .form-hint {
    font-size: 0.8125rem;
    color: var(--color-text-muted, #6b7280);
    margin: 0;
  }

  .form-error {
    font-size: 0.8125rem;
    color: var(--color-error, #ef4444);
    margin: 0;
  }

  /* Avatar Upload Section */
  .avatar-section {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border, #e5e7eb);
  }

  .avatar-upload {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .avatar-preview {
    flex-shrink: 0;
  }

  .avatar-image,
  .avatar-initials {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
    object-fit: cover;
  }

  .avatar-initials {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 600;
    background: var(--color-primary, #6366f1);
    color: white;
  }

  .avatar-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .avatar-hint {
    font-size: 0.8125rem;
    color: var(--color-text-muted, #6b7280);
    margin: 0;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    font-size: 0.875rem;
    font-weight: 600;
    border: 1px solid transparent;
    border-radius: var(--radius-md, 0.5rem);
    cursor: pointer;
    transition: all 150ms ease;
    white-space: nowrap;
  }

  .btn:focus-visible {
    outline: 2px solid var(--color-primary, #6366f1);
    outline-offset: 2px;
  }

  .btn-icon {
    width: 1rem;
    height: 1rem;
  }

  .btn-primary {
    background: var(--color-primary, #6366f1);
    color: white;
    border-color: var(--color-primary, #6366f1);
  }

  .btn-primary:hover {
    background: color-mix(in srgb, var(--color-primary, #6366f1) 90%, black);
  }

  .btn-secondary {
    background: var(--color-surface, #fff);
    color: var(--color-text, #000);
    border-color: var(--color-border, #e5e7eb);
  }

  .btn-secondary:hover {
    background: var(--color-background, #f9fafb);
  }

  .btn-ghost {
    background: transparent;
    color: var(--color-text, #000);
    border-color: transparent;
  }

  .btn-ghost:hover {
    background: var(--color-background, #f9fafb);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .settings-title {
      font-size: 1.5rem;
    }

    .avatar-upload {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .avatar-actions {
      width: 100%;
    }

    .btn {
      width: 100%;
    }
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .form-input,
    .form-textarea {
      background: var(--color-surface, #1f2937);
      border-color: var(--color-border, #374151);
    }

    .form-input:disabled {
      background: var(--color-background, #111827);
    }

    .btn-secondary {
      background: var(--color-surface, #1f2937);
      border-color: var(--color-border, #374151);
    }

    .btn-secondary:hover {
      background: var(--color-background, #111827);
    }

    .btn-ghost:hover {
      background: var(--color-background, #111827);
    }

    .avatar-section {
      border-bottom-color: var(--color-border, #374151);
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .form-input,
    .form-textarea,
    .btn {
      transition: none;
    }
  }
</style>

<script>
  /**
   * Profile Settings Form Handling
   */

  function initProfileSettings() {
    const profileForm = document.getElementById('profile-form');
    const passwordForm = document.getElementById('password-form');

    // Profile form submission
    if (profileForm) {
      profileForm.addEventListener('submit', (e) => {
        e.preventDefault();

        // In a real application, this would send data to an API

        // Show success message
        if (window.showToast) {
          window.showToast({
            message: 'Profile updated successfully!',
            variant: 'success',
            duration: 3000,
          });
        }
      });
    }

    // Password form submission with validation
    if (passwordForm) {
      passwordForm.addEventListener('submit', (e) => {
        e.preventDefault();

        const newPassword = passwordForm.querySelector('#new-password') as HTMLInputElement;
        const confirmPassword = passwordForm.querySelector('#confirm-password') as HTMLInputElement;

        // Validate passwords match
        if (newPassword.value !== confirmPassword.value) {
          confirmPassword.setCustomValidity('Passwords do not match');
          confirmPassword.reportValidity();
          return;
        }

        confirmPassword.setCustomValidity('');

        // In a real application, this would send data to an API

        // Show success message
        if (window.showToast) {
          window.showToast({
            message: 'Password updated successfully!',
            variant: 'success',
            duration: 3000,
          });
        }

        // Reset form
        (passwordForm as HTMLFormElement).reset();
      });

      // Clear custom validity on input
      const confirmPassword = passwordForm.querySelector('#confirm-password') as HTMLInputElement;
      if (confirmPassword) {
        confirmPassword.addEventListener('input', () => {
          confirmPassword.setCustomValidity('');
        });
      }
    }
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initProfileSettings);
  } else {
    initProfileSettings();
  }

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initProfileSettings);
</script>
