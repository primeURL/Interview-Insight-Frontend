---
/**
 * Team Settings Page
 *
 * @description
 * Team member management page with member list table,
 * invite functionality, and role management.
 */

import DashboardLayout from '@/layouts/DashboardLayout.astro';
import DataTable from '@dashboard-ui/DataTable.astro';
import Modal from '@dashboard-ui/Modal.astro';
import { Icon } from 'astro-icon/components';
import { getTeamMembers } from '@/lib/dashboard-data';

const breadcrumbs = [
  { label: 'Dashboard', href: '/dashboard' },
  { label: 'Settings', href: '/dashboard/settings' },
  { label: 'Team' },
];

// Get team members data
const teamMembers = getTeamMembers();

// Format data for DataTable
const tableData = teamMembers.map((member) => {
  // Create avatar or initials
  const initials = member.name
    .split(' ')
    .map((n) => n[0])
    .join('');
  const avatarHtml = member.avatar
    ? `<img src="${member.avatar}" alt="${member.name}" class="member-avatar" />`
    : `<div class="member-avatar member-avatar-initials">${initials}</div>`;

  // Format role with badge
  const roleColors = {
    owner: 'role-badge-owner',
    admin: 'role-badge-admin',
    member: 'role-badge-member',
  };
  const roleLabels = {
    owner: 'Owner',
    admin: 'Admin',
    member: 'Member',
  };
  const roleBadge = `<span class="role-badge ${roleColors[member.role]}">${roleLabels[member.role]}</span>`;

  // Format date
  const joinedDate = member.joinedAt.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });

  return {
    id: member.id,
    name: `<div class="member-name-cell">${avatarHtml}<span>${member.name}</span></div>`,
    plainName: member.name, // Plain text name for actions
    email: member.email,
    role: roleBadge,
    joined: joinedDate,
  };
});

// Define table columns
const columns = [
  { key: 'name', label: 'Name', sortable: true },
  { key: 'email', label: 'Email', sortable: true },
  { key: 'role', label: 'Role', sortable: true },
  { key: 'joined', label: 'Joined', sortable: true },
];

// Define table actions
const actions = [
  { label: 'Edit', onClick: 'handleEditMember', variant: 'secondary' as const },
  { label: 'Remove', onClick: 'handleRemoveMember', variant: 'danger' as const },
];
---

<DashboardLayout
  title="Team Settings"
  description="Manage your team members and their roles"
  breadcrumbs={breadcrumbs}
>
  <div class="team-container">
    <!-- Page Header -->
    <div class="team-header">
      <div class="team-header-content">
        <h1 class="team-title">Team Members</h1>
        <p class="team-description">
          Invite and manage team members. Control access and permissions for your workspace.
        </p>
      </div>
      <button type="button" class="btn btn-primary" id="invite-member-btn">
        <Icon name="lucide:user-plus" class="btn-icon" />
        Invite Member
      </button>
    </div>

    <!-- Team Stats -->
    <div class="team-stats">
      <div class="team-stat">
        <div class="team-stat-value">{teamMembers.length}</div>
        <div class="team-stat-label">Total Members</div>
      </div>
      <div class="team-stat">
        <div class="team-stat-value">
          {teamMembers.filter((m) => m.role === 'admin' || m.role === 'owner').length}
        </div>
        <div class="team-stat-label">Admins</div>
      </div>
      <div class="team-stat">
        <div class="team-stat-value">
          {teamMembers.filter((m) => m.role === 'member').length}
        </div>
        <div class="team-stat-label">Members</div>
      </div>
    </div>

    <!-- Team Members Table -->
    <div class="team-table">
      <DataTable
        columns={columns}
        data={tableData}
        actions={actions}
        emptyMessage="No team members found"
        searchable={true}
        itemsPerPage={10}
      />
    </div>

    <!-- Team Information -->
    <div class="team-info">
      <div class="team-info-section">
        <h3 class="team-info-title">
          <Icon name="lucide:info" class="team-info-icon" />
          About Team Roles
        </h3>
        <dl class="team-info-list">
          <div class="team-info-item">
            <dt class="team-info-term">Owner</dt>
            <dd class="team-info-description">
              Full access to all features including billing and team management. Can delete the
              workspace.
            </dd>
          </div>
          <div class="team-info-item">
            <dt class="team-info-term">Admin</dt>
            <dd class="team-info-description">
              Can manage team members, projects, and settings. Cannot access billing or delete
              workspace.
            </dd>
          </div>
          <div class="team-info-item">
            <dt class="team-info-term">Member</dt>
            <dd class="team-info-description">
              Can view and edit projects. Cannot manage team members or access settings.
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>

  <!-- Remove Member Confirmation Modal -->
  <Modal id="remove-member-modal" title="Remove Team Member" size="sm">
    <div class="modal-content-wrapper">
      <div class="modal-icon-wrapper">
        <Icon name="lucide:alert-triangle" class="modal-icon" />
      </div>
      <p class="modal-message" id="remove-member-message">
        Are you sure you want to remove this team member?
      </p>
      <p class="modal-warning">
        This action cannot be undone. The member will lose access to the workspace.
      </p>
    </div>

    <div slot="footer" class="modal-footer-actions">
      <button
        type="button"
        class="btn btn-secondary"
        onclick="window.closeModal('remove-member-modal')"
      >
        Cancel
      </button>
      <button type="button" id="confirm-remove-member-btn" class="btn btn-danger">
        <Icon name="lucide:user-minus" />
        <span>Remove Member</span>
      </button>
    </div>
  </Modal>
</DashboardLayout>

<style>
  .team-container {
    max-width: 72rem;
    margin: 0 auto;
  }

  /* Header */
  .team-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .team-header-content {
    flex: 1;
  }

  .team-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--color-text, #000);
    margin: 0 0 0.5rem 0;
  }

  .team-description {
    font-size: 1rem;
    color: var(--color-text-muted, #6b7280);
    margin: 0;
  }

  /* Stats */
  .team-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(10rem, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .team-stat {
    padding: 1.5rem;
    background: var(--color-surface, #fff);
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: var(--radius-lg, 0.75rem);
    text-align: center;
  }

  .team-stat-value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text, #000);
    margin-bottom: 0.25rem;
  }

  .team-stat-label {
    font-size: 0.875rem;
    color: var(--color-text-muted, #6b7280);
  }

  /* Table */
  .team-table {
    margin-bottom: 2rem;
  }

  /* Team Info */
  .team-info {
    padding: 1.5rem;
    background: var(--color-background, #f9fafb);
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: var(--radius-lg, 0.75rem);
  }

  .team-info-section {
    /* Container for info section */
  }

  .team-info-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text, #000);
    margin: 0 0 1rem 0;
  }

  .team-info-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: var(--color-primary, #6366f1);
  }

  .team-info-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 0;
  }

  .team-info-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .team-info-term {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text, #000);
  }

  .team-info-description {
    font-size: 0.875rem;
    color: var(--color-text-muted, #6b7280);
    margin: 0;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    font-size: 0.875rem;
    font-weight: 600;
    border: 1px solid transparent;
    border-radius: var(--radius-md, 0.5rem);
    cursor: pointer;
    transition: all 150ms ease;
    white-space: nowrap;
  }

  .btn:focus-visible {
    outline: 2px solid var(--color-primary, #6366f1);
    outline-offset: 2px;
  }

  .btn-icon {
    width: 1rem;
    height: 1rem;
  }

  .btn-primary {
    background: var(--color-primary, #6366f1);
    color: white;
    border-color: var(--color-primary, #6366f1);
  }

  .btn-primary:hover {
    background: color-mix(in srgb, var(--color-primary, #6366f1) 90%, black);
  }

  .btn-secondary {
    background: var(--color-surface, #fff);
    color: var(--color-text, #000);
    border: 1px solid var(--color-border, #e5e7eb);
  }

  .btn-secondary:hover {
    background: var(--color-background, #f9fafb);
  }

  .btn-secondary:focus-visible {
    outline: 2px solid var(--color-primary, #6366f1);
    outline-offset: 2px;
  }

  .btn-danger {
    background: var(--color-error, #ef4444);
    color: white;
  }

  .btn-danger:hover {
    background: color-mix(in srgb, var(--color-error, #ef4444) 90%, black);
  }

  .btn-danger:focus-visible {
    outline: 2px solid var(--color-error, #ef4444);
    outline-offset: 2px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .team-header {
      flex-direction: column;
      align-items: stretch;
    }

    .team-title {
      font-size: 1.5rem;
    }

    .btn {
      width: 100%;
    }

    .team-stats {
      grid-template-columns: 1fr;
    }
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .team-stat {
      background: var(--color-surface, #1f2937);
      border-color: var(--color-border, #374151);
    }

    .team-info {
      background: var(--color-background, #111827);
      border-color: var(--color-border, #374151);
    }

    .btn-secondary {
      background: var(--color-surface, #1f2937);
      border-color: var(--color-border, #374151);
    }

    .btn-secondary:hover {
      background: var(--color-background, #111827);
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .btn {
      transition: none;
    }
  }
</style>

<style is:global>
  /* Member name cell with avatar */
  .member-name-cell {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .member-avatar {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  .member-avatar-initials {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    font-weight: 600;
    background: var(--color-primary, #6366f1);
    color: white;
  }

  /* Role badges */
  .role-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: var(--radius-full, 9999px);
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .role-badge-owner {
    background: color-mix(in srgb, var(--color-primary, #6366f1) 15%, transparent);
    color: var(--color-primary, #6366f1);
  }

  .role-badge-admin {
    background: color-mix(in srgb, var(--color-success, #10b981) 15%, transparent);
    color: var(--color-success, #10b981);
  }

  .role-badge-member {
    background: color-mix(in srgb, var(--color-text-muted, #6b7280) 15%, transparent);
    color: var(--color-text-muted, #6b7280);
  }

  @media (prefers-color-scheme: dark) {
    .role-badge-owner {
      background: color-mix(in srgb, var(--color-primary, #6366f1) 25%, transparent);
    }

    .role-badge-admin {
      background: color-mix(in srgb, var(--color-success, #10b981) 25%, transparent);
    }

    .role-badge-member {
      background: color-mix(in srgb, var(--color-text-muted, #9ca3af) 25%, transparent);
      color: var(--color-text-muted, #9ca3af);
    }
  }

  /* Modal Content Styles */
  .modal-content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
  }

  .modal-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 50%;
    background: color-mix(in srgb, var(--color-error, #ef4444) 10%, transparent);
  }

  .modal-icon-wrapper :global(svg) {
    width: 2rem;
    height: 2rem;
    color: var(--color-error, #ef4444);
  }

  .modal-message {
    font-size: 1rem;
    color: var(--color-text, #000);
    margin: 0;
  }

  .modal-message strong {
    font-weight: 600;
  }

  .modal-warning {
    font-size: 0.875rem;
    color: var(--color-text-muted, #6b7280);
    margin: 0;
  }

  .modal-footer-actions {
    display: flex;
    gap: 0.75rem;
    width: 100%;
  }

  .modal-footer-actions .btn {
    flex: 1;
  }
</style>

<script>
  /**
   * Team Settings Page Functionality
   */

  function initTeamSettings() {
    const inviteBtn = document.getElementById('invite-member-btn');

    // Invite member button
    if (inviteBtn) {
      inviteBtn.addEventListener('click', () => {
        // In a real application, this would open a modal or navigate to invite page
        if (window.showToast) {
          window.showToast({
            message: 'Invite member functionality would open a modal here',
            variant: 'info',
            duration: 3000,
          });
        }
      });
    }
  }

  // Global action handlers for DataTable
  interface TeamMember {
    id: string;
    name: string;
    plainName: string;
    email: string;
    role: string;
    joined: string;
  }

  declare global {
    interface Window {
      handleEditMember: (member: TeamMember) => void;
      handleRemoveMember: (member: TeamMember) => void;
    }
  }

  // Store current member to remove
  let memberToRemove: TeamMember | null = null;

  window.handleEditMember = function (member: TeamMember) {
    // In a real application, this would open an edit modal
    if (window.showToast) {
      window.showToast({
        message: `Edit member: ${member.plainName}`,
        variant: 'info',
        duration: 3000,
      });
    }
  };

  window.handleRemoveMember = function (member: TeamMember) {
    memberToRemove = member;

    // Update modal message with member name
    const messageEl = document.getElementById('remove-member-message');
    if (messageEl) {
      messageEl.innerHTML = `Are you sure you want to remove <strong>${member.plainName}</strong> from the team?`;
    }

    // Open modal
    window.openModal('remove-member-modal');
  };

  // Handle confirm remove in modal
  const confirmRemoveBtn = document.getElementById('confirm-remove-member-btn');
  if (confirmRemoveBtn) {
    confirmRemoveBtn.addEventListener('click', () => {
      if (!memberToRemove) return;

      // In a real application, this would make an API call
      console.log('Remove member:', memberToRemove.id);

      // Close modal
      window.closeModal('remove-member-modal');

      // Show toast notification
      if (window.showToast) {
        window.showToast({
          message: `${memberToRemove.plainName} has been removed from the team`,
          variant: 'success',
          duration: 3000,
        });
      }

      memberToRemove = null;
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTeamSettings);
  } else {
    initTeamSettings();
  }

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initTeamSettings);
</script>
