---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import DemoRequestForm from '@forms/DemoRequestForm.astro';
import { Icon } from 'astro-icon/components';
import { siteConfig } from '@/config';

const benefits = [
  {
    icon: 'lucide:presentation',
    title: 'Personalized Demo',
    description: 'See how Virex can solve your specific deployment challenges.',
  },
  {
    icon: 'lucide:message-circle',
    title: 'Expert Guidance',
    description: 'Get answers to your technical questions from our solutions team.',
  },
  {
    icon: 'lucide:calculator',
    title: 'Custom Pricing',
    description: 'Receive a tailored quote based on your team size and needs.',
  },
  {
    icon: 'lucide:rocket',
    title: 'Migration Support',
    description: 'Learn about our white-glove migration assistance program.',
  },
];

const faqs = [
  {
    question: 'How long is the demo?',
    answer: 'Demos typically last 30-45 minutes, including time for Q&A.',
  },
  {
    question: 'Who should attend?',
    answer:
      'We recommend including technical decision-makers and team leads who will be using the platform.',
  },
  {
    question: 'Is there any commitment?',
    answer: 'No commitment required. The demo is completely free with no strings attached.',
  },
  {
    question: 'Can I get a trial after the demo?',
    answer: 'Yes! We offer extended trials for teams evaluating Virex for enterprise use.',
  },
];
---

<MarketingLayout
  title={`Request a Demo - ${siteConfig.name}`}
  description="Schedule a personalized demo with our team and see how Virex can transform your deployment workflow."
>
  <section class="py-section bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
        {/* Left: Content */}
        <div>
          <span
            class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary mb-4"
          >
            Book a Demo
          </span>
          <h1 class="text-4xl sm:text-5xl font-bold text-text mb-6">See Virex in Action</h1>
          <p class="text-xl text-text-muted mb-8 leading-relaxed">
            Get a personalized walkthrough of our platform and discover how Virex can help your team
            deploy faster, scale effortlessly, and ship with confidence.
          </p>

          {/* Benefits */}
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-12">
            {
              benefits.map((benefit) => (
                <div class="flex gap-4">
                  <div class="shrink-0 w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                    <Icon name={benefit.icon} class="w-5 h-5 text-primary" />
                  </div>
                  <div>
                    <h3 class="font-semibold text-text mb-1">{benefit.title}</h3>
                    <p class="text-sm text-text-muted">{benefit.description}</p>
                  </div>
                </div>
              ))
            }
          </div>

          {/* Social proof */}
          <div class="flex items-center gap-4 p-4 rounded-xl bg-surface border border-border">
            <div class="flex -space-x-2">
              {
                [1, 2, 3, 4].map((i) => (
                  <div class="w-10 h-10 rounded-full bg-primary/20 border-2 border-background flex items-center justify-center text-xs font-medium text-primary">
                    {String.fromCharCode(64 + i)}
                  </div>
                ))
              }
            </div>
            <div>
              <p class="text-sm font-medium text-text">Join 10,000+ teams</p>
              <p class="text-xs text-text-muted">who trust Virex for deployments</p>
            </div>
          </div>
        </div>

        {/* Right: Form */}
        <div class="lg:pl-8">
          <div class="bg-surface border border-border rounded-2xl p-8">
            <h2 class="text-2xl font-bold text-text mb-6">Schedule Your Demo</h2>
            <DemoRequestForm />
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* FAQ Section */}
  <section class="py-section bg-surface">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-text text-center mb-8">Frequently Asked Questions</h2>
      <div class="space-y-4">
        {
          faqs.map((faq) => (
            <div class="p-6 rounded-xl bg-background border border-border">
              <h3 class="font-semibold text-text mb-2">{faq.question}</h3>
              <p class="text-text-muted">{faq.answer}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</MarketingLayout>
