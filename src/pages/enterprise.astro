---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import Hero from '@sections/marketing/Hero.astro';
import LogoCloud from '@sections/marketing/LogoCloud.astro';
import FeatureHighlight from '@sections/marketing/FeatureHighlight.astro';
import SecurityBadges from '@sections/pricing/SecurityBadges.astro';
import StatsSection from '@sections/social-proof/StatsSection.astro';
import CaseStudyCard from '@sections/social-proof/CaseStudyCard.astro';
import BentoGrid from '@sections/marketing/BentoGrid.astro';
import CTA from '@sections/marketing/CTA.astro';
import { siteConfig } from '@/config';

const enterpriseFeatures = [
  {
    title: 'Single Sign-On (SSO)',
    description:
      'Integrate with your existing identity provider. We support SAML 2.0, OIDC, and all major providers including Okta, Azure AD, and Google Workspace. Streamline onboarding and maintain security compliance.',
    icon: 'lucide:key-round',
    badge: 'Security',
    highlights: [
      'SAML 2.0 and OIDC support',
      'Automatic user provisioning (SCIM)',
      'Role mapping from your IdP',
      'Session management controls',
    ],
    cta: { label: 'View SSO documentation', href: '/docs/sso' },
  },
  {
    title: 'Advanced Access Controls',
    description:
      'Fine-grained permissions let you control exactly who can do what. Create custom roles, set up approval workflows, and maintain audit trails for compliance.',
    icon: 'lucide:shield-check',
    badge: 'Governance',
    highlights: [
      'Custom role definitions',
      'Project-level permissions',
      'Deployment approval workflows',
      'IP allowlisting',
    ],
    cta: { label: 'Learn about RBAC', href: '/docs/rbac' },
  },
  {
    title: 'Dedicated Infrastructure',
    description:
      'Get isolated compute resources for maximum performance and security. Your builds and deployments run on dedicated infrastructure, separate from other customers.',
    icon: 'lucide:server',
    badge: 'Performance',
    highlights: [
      'Isolated build environments',
      'Dedicated edge network',
      'Custom domain configurations',
      'Private networking options',
    ],
    cta: { label: 'Explore infrastructure', href: '/docs/infrastructure' },
  },
  {
    title: 'Enterprise Support',
    description:
      "Get the support your team deserves. Dedicated account managers, 24/7 priority support, and guaranteed response times ensure you're never blocked.",
    icon: 'lucide:headphones',
    badge: 'Support',
    highlights: [
      '24/7 priority support',
      'Dedicated account manager',
      '99.99% uptime SLA',
      'Quarterly business reviews',
    ],
    cta: { label: 'Contact sales', href: '/contact' },
  },
];

const securityBadges = [
  { name: 'SOC 2 Type II', icon: 'lucide:shield-check', description: 'Audited annually' },
  { name: 'GDPR Compliant', icon: 'lucide:globe', description: 'EU data protection' },
  { name: 'ISO 27001', icon: 'lucide:award', description: 'Information security' },
];

const stats = [
  { value: '99.99%', label: 'Uptime SLA' },
  { value: '<1hr', label: 'Support response' },
  { value: '500+', label: 'Enterprise customers' },
  { value: '24/7', label: 'Global support' },
];

const enterpriseCases = [
  {
    company: 'Fortune 500 Bank',
    industry: 'Financial Services',
    quote:
      "Virex's security controls and compliance certifications made it the only platform that met our strict requirements. The dedicated support team has been exceptional.",
    author: 'Chief Technology Officer',
    role: 'Global Financial Institution',
    metrics: [
      { value: '100%', label: 'Compliance' },
      { value: '60%', label: 'Faster releases' },
    ],
  },
  {
    company: 'Healthcare Leader',
    industry: 'Healthcare',
    quote:
      'HIPAA compliance was non-negotiable for us. Virex delivered that plus incredible performance improvements across our patient portal.',
    author: 'VP of Engineering',
    role: 'Healthcare Technology',
    metrics: [
      { value: 'HIPAA', label: 'Compliant' },
      { value: '3x', label: 'Faster deploys' },
    ],
  },
  {
    company: 'Global E-commerce Brand',
    industry: 'Retail',
    quote:
      "With Virex's dedicated infrastructure and advanced access controls, we were able to scale globally while maintaining strict security standards.",
    author: 'CTO',
    role: 'E-commerce Platform',
    metrics: [
      { value: '100%', label: 'Security' },
      { value: '5x', label: 'Faster builds' },
    ],
  },
];

const bentoItems = [
  {
    title: 'Global Edge Network',
    description:
      'Deploy to 200+ edge locations worldwide. Your applications load fast for every user, everywhere.',
    icon: 'lucide:globe',
    size: 'large' as const,
    accent: 'blue' as const,
  },
  {
    title: 'Unlimited Scalability',
    description: 'Auto-scale from zero to millions of requests without configuration.',
    icon: 'lucide:trending-up',
    accent: 'green' as const,
  },
  {
    title: 'Zero Downtime Deploys',
    description: 'Atomic deployments ensure your users never see errors during updates.',
    icon: 'lucide:refresh-cw',
    accent: 'purple' as const,
  },
  {
    title: 'Advanced Analytics',
    description:
      'Real-time insights into performance, errors, and user behavior across all your applications.',
    icon: 'lucide:bar-chart-2',
    size: 'medium' as const,
    accent: 'orange' as const,
  },
];
---

<MarketingLayout
  title={`Enterprise - ${siteConfig.name}`}
  description="Enterprise-grade deployment platform with advanced security, compliance, and dedicated support for large organizations."
>
  <Hero
    title="Enterprise-Grade Deployment Platform"
    subtitle="Built for organizations that demand security, compliance, and reliability. Get dedicated infrastructure, advanced access controls, and 24/7 support."
    primaryCTA={{ label: 'Contact Sales', href: '/contact' }}
    secondaryCTA={{ label: 'Request Demo', href: '/demo' }}
    background="default"
  />

  <LogoCloud
    title="Trusted by industry leaders"
    logos={[
      { name: 'Logo 1', src: '/images/logos/logoipsum-1.svg' },
      { name: 'Logo 2', src: '/images/logos/logoipsum-2.svg' },
      { name: 'Logo 3', src: '/images/logos/logoipsum-3.svg' },
      { name: 'Logo 4', src: '/images/logos/logoipsum-4.svg' },
      { name: 'Logo 5', src: '/images/logos/logoipsum-5.svg' },
      { name: 'Logo 6', src: '/images/logos/logoipsum-6.svg' },
    ]}
    background="default"
  />

  <StatsSection stats={stats} background="muted" />

  <FeatureHighlight
    title="Built for Enterprise"
    subtitle="Advanced features designed for large organizations with complex requirements."
    features={enterpriseFeatures}
    background="default"
  />

  <SecurityBadges
    title="Security & Compliance"
    subtitle="We take security seriously. Virex is built to meet the strictest compliance requirements."
    badges={securityBadges}
    variant="cards"
    background="muted"
  />

  <BentoGrid
    title="Platform Capabilities"
    subtitle="Everything you need to deploy at scale."
    items={bentoItems}
    background="default"
  />

  <CaseStudyCard
    title="Enterprise Success Stories"
    cases={enterpriseCases}
    variant="grid"
    background="muted"
  />

  <CTA
    title="Ready to scale with confidence?"
    description="Talk to our enterprise team about your specific requirements. Custom pricing available."
    action={{ label: 'Contact Sales', href: '/contact' }}
    secondaryAction={{ label: 'Request Demo', href: '/demo' }}
    background="accent"
  />
</MarketingLayout>
