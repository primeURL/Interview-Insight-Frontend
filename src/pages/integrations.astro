const featuredIntegrations = integrations.filter((i) => i.featured);
---

<MarketingLayout
  title={`Integrations - ${siteConfig.name}`}
  description="Connect your favorite tools and services. Explore our growing ecosystem of integrations."
>
  <PageHeader
    title="Integrations"
    subtitle="Connect your favorite tools and services. Our platform integrates seamlessly with the tools you already use."
  />

  <IntegrationsGrid
    title="Featured Integrations"
    subtitle="Our most popular integrations to supercharge your workflow."
    integrations={featuredIntegrations}
    variant="detailed"
    invertOnDark={false}
    columns={3}
    background="muted"
  />

  <IntegrationsGrid
    title="All Integrations"
    subtitle="Browse our complete catalog of integrations by category."
    integrations={integrations}
    invertOnDark={false}
    showFilter={true}
    variant="grid"
    columns={4}
    background="default"
  />

  <CTA
    title="Don't see what you need?"
    description="We're always adding new integrations. Let us know what tools you'd like to connect."
    action={{ label: 'Request Integration', href: '/contact' }}
    background="muted"
  />
</MarketingLayout>
