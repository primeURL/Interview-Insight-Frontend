---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import { InterviewPrepWrapper } from '@/components/forms/InterviewPrepWrapper';
import { siteConfig } from '@/config';

const title = 'Interview Preparation Platform';
const description =
  'Generate personalized interview questions based on your interviewer\'s LinkedIn profile and your target role.';
---

<MarketingLayout title={`${title} - ${siteConfig.name}`} description={description}>
  <section class="py-8 sm:py-12 md:py-16 lg:py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <InterviewPrepWrapper client:load />
    </div>
  </section>
</MarketingLayout>
