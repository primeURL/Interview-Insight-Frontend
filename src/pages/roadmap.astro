---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import PageHeader from '@sections/content/PageHeader.astro';
import RoadmapTimeline from '@sections/product/RoadmapTimeline.astro';
import CTA from '@sections/marketing/CTA.astro';
import { siteConfig } from '@/config';

const roadmapItems = [
  {
    quarter: 'Q1 2025',
    status: 'in-progress' as const,
    items: [
      {
        title: 'GitHub Actions Integration',
        description: 'Native integration with GitHub Actions for seamless CI/CD workflows.',
        status: 'in-progress' as const,
      },
      {
        title: 'Custom Domains SSL',
        description: 'Automatic SSL certificate provisioning for custom domains.',
        status: 'in-progress' as const,
      },
      {
        title: 'Team Analytics Dashboard',
        description: 'Comprehensive analytics for team performance and deployment metrics.',
        status: 'planned' as const,
      },
    ],
  },
  {
    quarter: 'Q2 2025',
    status: 'planned' as const,
    items: [
      {
        title: 'Multi-Region Deployments',
        description: 'Deploy your applications to multiple regions for better global performance.',
        status: 'planned' as const,
      },
      {
        title: 'Database Integrations',
        description: 'One-click integrations with popular databases like PostgreSQL and MongoDB.',
        status: 'planned' as const,
      },
      {
        title: 'Advanced Caching',
        description: 'Edge caching with fine-grained cache control and instant purging.',
        status: 'planned' as const,
      },
    ],
  },
  {
    quarter: 'Q3 2025',
    status: 'planned' as const,
    items: [
      {
        title: 'Serverless Functions',
        description: 'Deploy serverless functions alongside your static sites.',
        status: 'planned' as const,
      },
      {
        title: 'A/B Testing',
        description: 'Built-in A/B testing for deployments with traffic splitting.',
        status: 'planned' as const,
      },
    ],
  },
  {
    quarter: 'Future',
    status: 'exploring' as const,
    items: [
      {
        title: 'Self-Hosted Option',
        description: 'Run Virex on your own infrastructure for complete control.',
        status: 'exploring' as const,
      },
      {
        title: 'Mobile App',
        description: 'Monitor and manage deployments from your mobile device.',
        status: 'exploring' as const,
      },
    ],
  },
];
---

<MarketingLayout
  title={`Roadmap - ${siteConfig.name}`}
  description={`See what's coming next for ${siteConfig.name}. Our public roadmap shows planned features and improvements.`}
>
  <PageHeader title="Product Roadmap" subtitle="See what we're working on and what's coming next.">
    <span class="text-text-muted">Have a feature request? </span>
    <a href="/contact" class="text-primary hover:underline">Let us know</a>.
  </PageHeader>

  <RoadmapTimeline quarters={roadmapItems} background="default" />

  <CTA
    title="Have a feature request?"
    description="We'd love to hear your ideas. Share your feedback and help shape the future of our platform."
    action={{ label: 'Contact Us', href: '/contact' }}
    background="muted"
  />
</MarketingLayout>
