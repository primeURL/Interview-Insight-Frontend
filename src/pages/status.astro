---
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import PageHeader from '@sections/content/PageHeader.astro';
import StatusOverview from '@sections/product/StatusOverview.astro';
import { siteConfig } from '@/config';

// This is a placeholder status page. In production, you would typically:
// 1. Use a dedicated status page service (Statuspage.io, Instatus, etc.)
// 2. Fetch real-time status from your monitoring system
// 3. Display actual incident history

const services = [
  { name: 'Website & Dashboard', status: 'operational' as const },
  { name: 'API', status: 'operational' as const },
  { name: 'Build System', status: 'operational' as const },
  { name: 'Edge Network (CDN)', status: 'operational' as const },
  { name: 'DNS', status: 'operational' as const },
  { name: 'SSL Certificates', status: 'operational' as const },
];

// Sample past incidents - replace with real incident data
const recentIncidents = [
  {
    date: 'December 10, 2024',
    title: 'Increased API Latency',
    status: 'resolved' as const,
    description:
      'We experienced elevated API response times for approximately 15 minutes. The issue has been identified and resolved.',
    updates: [
      { time: '14:45 UTC', message: 'Issue resolved. All systems operating normally.' },
      { time: '14:30 UTC', message: "We've identified the cause and are implementing a fix." },
      { time: '14:15 UTC', message: 'Investigating reports of slow API responses.' },
    ],
  },
];
---

<MarketingLayout
  title={`System Status - ${siteConfig.name}`}
  description={`Current system status and incident history for ${siteConfig.name}. Check the operational status of our services.`}
>
  <PageHeader title="System Status" subtitle={`Current status of ${siteConfig.name} services`} />

  <StatusOverview
    services={services}
    incidents={recentIncidents}
    twitterUrl={siteConfig.social.twitter}
    supportEmail={siteConfig.contact.supportEmail}
    background="default"
  />
</MarketingLayout>
